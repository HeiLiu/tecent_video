<view class="container">
  <!-- 头部搜索及轮播区 -->
    <view class="weui-search-bar__box" style="border: 1px solid red">
      <icon class="weui-icon-search_in-box" type="search" size="18"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="请输入片名、主演或导演" bindinput="bindKeyInput" />
    </view>
    <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" mode="aspectFill" class="slide-image" />
          <view class="image_info">
            <text>更新至11集</text>
          </view>
          <text class="image_title">【创造101】22人离开王嘉尔神配合</text>
        </swiper-item>
      </block>
    </swiper>
  <!-- 内容取板块 -->
    <view class="section">
      <view class="section_title">不负.定制101会员卡额外加121赞</view>
      <view class="section_poster">
        <image class="poster_img" src="../../assets/post/post1.png"></image>
        <view class="poster_detail">更新至20集</view>
        <text class="poster_title">结爱[会员抢先看]</text>
      </view>
      <view class="section_videos">
        <block wx:for="1234">
            <view class="video">
          <image mode="aspectFill" src="../../assets/post/post1.png"></image>
          <view class="detail_info">aaa</view>
          <view class="video_detail">
            <text class="video_title">归去来、追剧吧</text>
            <text class="video_content smallFont">罗晋强吻唐嫣被扇耳光？</text>
          </view>
        </view>
        </block>
        <view class="line"></view>
        <view class="section_ft" bindtap="refreshTap">
          <image class="refresh" src="../../assets/icon/refresh.png"></image>
          <text class="refresh_info smallFont">换一批试试</text>
        </view>
      </view>
    </view>
