/* pages/video_detail/video_detail.wxss */
.section{
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0,.6);
    color: #fff;
}
#myVideo{
    width: 100%;
}
.video_title{
    font-weight:600;
}
.midFont{
    font-size: 34rpx;
}
.video_detail{
    padding:0 20rpx;
    font-size: 28rpx;
}
.operation{
    display: flex;
    align-items: center;
    padding: 30rpx;
    padding-bottom: 40rpx;
}
.clarity{
    position: relative;
    width: 120rpx;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    border: 2px solid #fff;
    border-radius: 8rpx;
    padding: 0 15rpx;
    box-sizing: border-box;
}
.clarity .arrow{
    padding: 5rpx;
    width: 32rpx;
    height: 32rpx;
}
.operation image{
    position: absolute;
    width: 64rpx;
    height: 64rpx;
}
.share{
    right: 150rpx;
}
.heart{
    right:30rpx;
}
.rmTopLine:before{
    border-top: none;
}
.zhuanji::before{
    border-color: rgba(0, 0, 0,.2);
}