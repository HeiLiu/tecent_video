.category_top {
  display: flex;
  flex-direction: row;
  font-weight: 600;
  font-size: 34rpx;
  white-space: nowrap;
  justify-content: space-between;
  overflow: hidden;
}

.cate_list {
  display: inline-block;
  width: auto;
  padding: 20rpx;
  position: relative;
}

.cate_list:first-child {
  padding-left: 0;
}

.on {
  color: orange;
}

.on:after {
  content: "";
  background-color: orange;
  position: absolute;
  bottom: 10rpx;
  left: 40%;
  width: 10px;
  height: 5rpx;
}

.section{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  padding-bottom: 20rpx;
}
/* .section:first-child{
  padding-top: 100rpx;
} */
.section .section_title{
  padding: 20rpx 0 20rpx 20rpx;
  font-weight: bold;
}

.section_videos{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.video{
  box-sizing: border-box;
  width:338rpx;
  margin: 10rpx 0rpx;
  overflow: hidden;
  position: relative;
}

.video image{
  border-radius: 10rpx;
  width:338rpx;
  height: 200rpx;
}
.detail_info{
  background: red;
  position: absolute;
  right: 12rpx;
  bottom: 112rpx;
  width: auto;
  height:30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.video_title{
  display: block;
  line-height: 34rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.line{
  height: 1px;
  width: 100%;
  background-color: rgba(204, 204, 204, .3);
}