/* pages/user/user.wxss */

.userPage {
    height: 100vh;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    box-sizing: border-box;
    background-color: #F4F6F8;
    font-size: 32rpx;
}

.userInfo {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 300rpx;
    align-items: center;
    justify-content: center;
    background-color: #fff;
}

.userInfo .avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
    position: relative;
    /* border:1px solid red; */
}
.avatar::after{
    content: '';
    background-image: url(data:image/svg+xml;base64,);
    background-size: cover;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    position: absolute;
    bottom: 5rpx;right: 20rpx;
    background-color: #fff;
}
.vipImg{
    width: 64rpx;
    height: 64rpx;
    padding: 20rpx;
    vertical-align: middle;
}
.fblod{
    font-weight: bold;
}