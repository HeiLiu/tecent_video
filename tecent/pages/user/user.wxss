.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    box-sizing: border-box;
    background-color: #F4F6F8;
    font-size: 32rpx;
}

.userInfo {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 300rpx;
    align-items: center;
    justify-content: center;
    background-color: #fff;
}

.userInfo .avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
    /* border:1px solid red; */
}

.vipImg{
    width: 64rpx;
    height: 64rpx;
    padding: 20rpx;
    vertical-align: middle;
}
.fblod{
    font-weight: bold;
